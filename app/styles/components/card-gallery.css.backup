/* ============================================================
   CARD GALLERY - Custom Stacked Animation
============================================================ */

/* Desktop/Mobile Toggle */
.desktop-only {
  display: none;
}

.mobile-only {
  display: block;
}

@media (min-width: 768px) {
  .desktop-only {
    display: block;
  }
  .mobile-only {
    display: none;
  }
}

/* ============================================================
   DESKTOP GALLERY
============================================================ */
.card-gallery-container {
  width: 100%;
  max-width: 1100px;
  margin: 0 auto;
  padding: 40px 20px;
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 500px;
}

.card-gallery {
  position: relative;
  width: 100%;
  height: 450px;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* Card Base Styles */
.gallery-card {
  position: absolute;
  width: 320px;
  height: 400px;
  border-radius: 24px;
  overflow: hidden;
  cursor: pointer;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  transition: all 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
  border: 2px solid rgba(255, 255, 255, 0.2);

  /* Start stacked in center */
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%) rotate(0deg);
  opacity: 0;
  animation: stackFadeIn 0.8s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
}

.gallery-card-image {
  object-fit: cover;
  transition: transform 0.4s ease;
}

/* Stacked fade-in animation */
@keyframes stackFadeIn {
  0% {
    opacity: 0;
    transform: translate(-50%, -50%) scale(0.8) rotate(0deg);
  }
  100% {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1) rotate(0deg);
  }
}

/* Card positions when spread */
.card-gallery.spread .gallery-card {
  animation: none;
}

/* Left card spreads left */
.card-gallery.spread .card-0 {
  left: 10%;
  transform: translate(-50%, -50%) rotate(-8deg);
  animation-delay: 0.1s;
}

/* Center card stays centered */
.card-gallery.spread .card-1 {
  left: 50%;
  transform: translate(-50%, -50%) rotate(5deg);
  z-index: 2;
  animation-delay: 0.2s;
}

/* Right card spreads right */
.card-gallery.spread .card-2 {
  left: 90%;
  transform: translate(-50%, -50%) rotate(-6deg);
  animation-delay: 0.3s;
}

/* Hover Effects - Zoom card only */
.gallery-card:hover {
  transform: translate(-50%, -50%) rotate(0deg) scale(1.08) !important;
  z-index: 10 !important;
  box-shadow: 0 30px 80px rgba(0, 0, 0, 0.4);
}

.gallery-card:hover .gallery-card-image {
  transform: scale(1);
}

/* ============================================================
   MOBILE HORIZONTAL SCROLL GALLERY
============================================================ */
.card-gallery-mobile {
  width: 100%;
  overflow: hidden;
  padding: 40px 0;
}

.mobile-scroll-container {
  display: flex;
  gap: 20px;
  overflow-x: auto;
  scroll-snap-type: x mandatory;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: none; /* Firefox */
  -ms-overflow-style: none; /* IE/Edge */

  /* Center the middle card */
  padding: 0 calc(50vw - 140px);
}

/* Hide scrollbar */
.mobile-scroll-container::-webkit-scrollbar {
  display: none;
}

.mobile-gallery-card {
  flex-shrink: 0;
  width: 280px;
  height: 350px;
  border-radius: 20px;
  overflow: hidden;
  position: relative;
  scroll-snap-align: center;
  box-shadow: 0 15px 40px rgba(0, 0, 0, 0.25);
  border: 2px solid rgba(255, 255, 255, 0.2);
  cursor: pointer;

  /* Stacked animation on mobile */
  opacity: 0;
  transform: scale(0.85) rotate(0deg);
  transition: all 0.4s ease;
}

.mobile-gallery-card.visible {
  animation: mobileCardReveal 0.6s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
}

@keyframes mobileCardReveal {
  0% {
    opacity: 0;
    transform: scale(0.85) translateY(30px);
  }
  100% {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

/* Mobile card tap effect */
.mobile-gallery-card:active {
  transform: scale(0.95);
}

/* ============================================================
   ZOOM MODAL
============================================================ */
.zoom-modal {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.92);
  backdrop-filter: blur(8px);
  z-index: 9999;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px;
  animation: modalFadeIn 0.3s ease;
}

@keyframes modalFadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.zoom-modal-content {
  position: relative;
  max-width: 90vw;
  max-height: 90vh;
  animation: zoomIn 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
}

@keyframes zoomIn {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.zoomed-card {
  position: relative;
  width: 90vw;
  max-width: 700px;
  aspect-ratio: 4 / 5;
  border-radius: 24px;
  overflow: hidden;
  box-shadow: 0 40px 100px rgba(0, 0, 0, 0.6);
  border: 3px solid rgba(255, 255, 255, 0.2);
}

.zoomed-image {
  object-fit: cover;
}

.zoom-close {
  position: absolute;
  top: -50px;
  right: 0;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  border: 2px solid rgba(255, 255, 255, 0.3);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.2s ease;
  backdrop-filter: blur(8px);
}

.zoom-close:hover {
  background: rgba(255, 255, 255, 0.2);
  transform: rotate(90deg);
}

@media (max-width: 767px) {
  .zoom-close {
    top: 10px;
    right: 10px;
    background: rgba(0, 0, 0, 0.5);
  }
}

/* Responsive adjustments */
@media (min-width: 1024px) {
  .card-gallery {
    height: 500px;
  }

  .gallery-card {
    width: 350px;
    height: 440px;
  }
}

@media (max-width: 767px) {
  .mobile-gallery-card {
    width: 240px;
    height: 300px;
  }

  .mobile-scroll-container {
    padding: 0 calc(50vw - 120px);
  }
}
