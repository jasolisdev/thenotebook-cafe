/* ============================================================
   WHAT TO EXPECT SECTION
============================================================ */

/* Coffee Cup Icon with Steam Animation */
.expect-icon-coffee {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.coffee-cup-expect {
  color: rgba(90, 74, 56, 0.9);
  transition: color 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.expect-steam {
  position: absolute;
  width: 2px;
  height: 10px;
  background: linear-gradient(to top, rgba(90, 74, 56, 0.5), transparent);
  border-radius: 50%;
  opacity: 0;
  animation: expect-steam-rise 2s ease-in-out infinite;
}

.expect-steam-1 {
  left: 8px;
  top: -6px;
  animation-delay: 0s;
}

.expect-steam-2 {
  left: 12px;
  top: -6px;
  animation-delay: 0.4s;
}

.expect-steam-3 {
  left: 16px;
  top: -6px;
  animation-delay: 0.8s;
}

@keyframes expect-steam-rise {
  0% {
    opacity: 0;
    transform: translateY(0) scaleX(1);
  }

  50% {
    opacity: 1;
  }

  100% {
    opacity: 0;
    transform: translateY(-14px) scaleX(1.5);
  }
}

/* Music Notes Animation */
.expect-icon-music {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0px;
}

.music-note-expect {
  color: rgba(90, 74, 56, 0.9);
  transition: color 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.music-note-expect-1 {
  width: 18px;
  height: 24px;
  animation: expect-music-float 2s ease-in-out infinite;
}

.music-note-expect-2 {
  width: 14px;
  height: 20px;
  margin-left: -6px;
  animation: expect-music-float 2s ease-in-out 0.5s infinite;
}

@keyframes expect-music-float {
  0%,
  100% {
    transform: translateY(0);
  }

  50% {
    transform: translateY(-6px);
  }
}

/* Notebook Icon with Pen Animation */
.expect-icon-notebook {
  color: rgba(90, 74, 56, 0.9);
  transition: color 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.notebook-pen-expect {
  animation: expect-pen-write 3s ease-in-out infinite;
  transform-origin: center;
}

@keyframes expect-pen-write {
  0%,
  100% {
    transform: translate(0, 0) rotate(0deg);
    opacity: 1;
  }

  25% {
    transform: translate(-2px, 2px) rotate(-5deg);
    opacity: 1;
  }

  50% {
    transform: translate(2px, 2px) rotate(5deg);
    opacity: 0.7;
  }

  75% {
    transform: translate(-1px, 1px) rotate(-3deg);
    opacity: 1;
  }
}

/* Hover Effects */
.expect-icon-coffee:hover .coffee-cup-expect,
.expect-icon-music:hover .music-note-expect,
.expect-icon-notebook:hover {
  color: rgba(90, 74, 56, 1);
}
