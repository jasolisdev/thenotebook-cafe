/* ============================================================
   ATMOSPHERE CAROUSEL - Uses same container as hero-gallery
============================================================ */
.atmosphere-carousel {
  /* Base layout */
  display: flex;
  gap: 64px;
  align-items: center;
  justify-content: flex-start;
  /* Start alignment for mobile */
  flex-wrap: nowrap;
  /* Always horizontal, no wrapping on any screen size */
  padding: 40px 40px;
  /* Generous horizontal padding for mobile overflow */
  margin: 0 -20px;
  /* Pull carousel beyond container edges */
  /* Scroll behavior - smooth free scrolling */
  overflow-x: auto;
  overflow-y: visible;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: none;
  /* Firefox */
  -ms-overflow-style: none;
  /* IE and Edge */
  scroll-behavior: smooth;
}

.atmosphere-carousel::-webkit-scrollbar {
  display: none;
  /* Chrome, Safari, Edge */
}

/* Desktop: Smaller gap and generous horizontal overflow - no scrolling needed */
@media (min-width: 768px) {
  .atmosphere-carousel {
    gap: 56px;
    padding: 60px 100px;
    /* Generous horizontal padding for wide overflow */
    margin: -60px -100px;
    /* Pull carousel beyond container for overflow effect */
    overflow-x: visible;
    /* No scrolling - all cards fit on screen */
    justify-content: center;
    /* Center alignment for desktop */
  }
}

.atmosphere-image-wrapper {
  /* No special styles needed - inherits from .image-card */
}

.atmosphere-image-number {
  position: absolute;
  top: 12px;
  left: 12px;
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(201, 154, 88, 0.95);
  color: #0f0c0a;
  font-family: var(--font-sans);
  font-size: 16px;
  font-weight: 700;
  border-radius: 50%;
  z-index: 10;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
}

/* Unique tilt for each atmosphere card - matches hero-gallery angles */
.atmosphere-tilt-1 {
  --tilt: -6deg;
}

.atmosphere-tilt-2 {
  --tilt: 8deg;
}

.atmosphere-tilt-3 {
  --tilt: -7deg;
}

/* Z-index stacking: Card 2 on top, cards 1 and 3 behind */
.atmosphere-card-1 {
  z-index: 1;
}

.atmosphere-card-2 {
  z-index: 3;
}

.atmosphere-card-3 {
  z-index: 1;
}

/* ============================================================
   ATMOSPHERE CARD ANIMATIONS - No fade, smooth visible spread
============================================================ */
/* Initial state: Cards visible, stacked at center */
.atmosphere-card-initial.atmosphere-card-1:not(.atmosphere-card-animate) {
  opacity: 1;
  transform: translateY(60px) translateX(280px) rotate(var(--tilt));
}

.atmosphere-card-initial.atmosphere-card-2:not(.atmosphere-card-animate) {
  opacity: 1;
  transform: translateY(60px) translateX(0) rotate(var(--tilt));
}

.atmosphere-card-initial.atmosphere-card-3:not(.atmosphere-card-animate) {
  opacity: 1;
  transform: translateY(60px) translateX(-280px) rotate(var(--tilt));
}

.atmosphere-card-1.atmosphere-card-animate {
  transform: translateY(0) translateX(0) rotate(var(--tilt));
}

.atmosphere-card-2.atmosphere-card-animate {
  transform: translateY(0) translateX(0) rotate(var(--tilt));
}

.atmosphere-card-3.atmosphere-card-animate {
  transform: translateY(0) translateX(0) rotate(var(--tilt));
}

/* Hover states for atmosphere cards - override animation forwards */
.atmosphere-card-animate {
  transition: transform 1.2s cubic-bezier(0.22, 0.61, 0.36, 1), box-shadow 1.2s cubic-bezier(0.22, 0.61, 0.36, 1);
}

@media (hover: hover) {
  .atmosphere-card-animate:hover {
    transform: translateY(-8px) translateX(0) rotate(var(--tilt)) scale(1.08) !important;
    box-shadow: 0 22px 52px rgba(0, 0, 0, 0.22);
  }
}

