/* Section Label with Dividers */
.music-visualizer {
  display: flex;
  align-items: flex-end;
  justify-content: center;
  gap: 6px;
  height: 28px;
}

.music-visualizer span {
  display: block;
  width: 4px;
  background: rgba(164, 141, 120, 0.9);
  border-radius: 9999px;
  animation: visualizerPulse 1.2s ease-in-out infinite;
  box-shadow: 0 4px 12px rgba(164, 141, 120, 0.35);
}

.music-visualizer span:nth-child(2) {
  animation-delay: 0.1s;
}

.music-visualizer span:nth-child(3) {
  animation-delay: 0.2s;
}

.music-visualizer span:nth-child(4) {
  animation-delay: 0.3s;
}

.music-visualizer span:nth-child(5) {
  animation-delay: 0.4s;
}

@keyframes visualizerPulse {
  0% {
    height: 6px;
    opacity: 0.6;
  }

  25% {
    height: 22px;
    opacity: 1;
  }

  50% {
    height: 14px;
    opacity: 0.85;
  }

  75% {
    height: 26px;
    opacity: 1;
  }

  100% {
    height: 8px;
    opacity: 0.7;
  }
}


.amenity-icon {
  animation: amenityPulse 1.8s ease-in-out infinite;
  transform-origin: center;
}

@keyframes amenityPulse {
  0% {
    transform: translateY(0) scale(1);
    opacity: 0.9;
  }

  50% {
    transform: translateY(-4px) scale(1.08);
    opacity: 1;
  }

  100% {
    transform: translateY(0) scale(1);
    opacity: 0.9;
  }
}

