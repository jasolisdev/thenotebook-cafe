.featured-iced-coffee {
  position: absolute;
  width: 60%;
  height: auto;
  object-fit: contain;
  top: 50%;
  left: 50%;
  transform: translate(150%, -50%);
  opacity: 0;
}

/* Trigger animation on scroll reveal - only for first slide */
.scroll-reveal.is-visible .featured-coffee-slide:first-child .featured-iced-coffee {
  animation: slideFromRight 1.2s cubic-bezier(0.4, 0, 0.2, 1) forwards;
}

/* Other slides should be visible immediately when swiped to */
.featured-coffee-slide:not(:first-child) .featured-iced-coffee {
  transform: translate(-50%, -50%);
  opacity: 1;
}

/* Mobile animation - slide from right */
@keyframes slideFromRight {
  0% {
    opacity: 0;
    transform: translate(150%, -50%);
  }

  100% {
    opacity: 1;
    transform: translate(-50%, -50%);
  }
}

/* Desktop styles and animation */
@media (min-width: 640px) {

  /* Change carousel to horizontal layout on desktop */
  .featured-coffee-carousel {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: visible;
  }

  .featured-coffee-track {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    gap: 24px;
    overflow: visible;
    scroll-snap-type: none;
    height: auto;
    pointer-events: none;
  }

  .featured-coffee-slide {
    flex: 0 0 auto;
    width: auto;
    height: auto;
    scroll-snap-align: none;
    pointer-events: auto;
  }

  .featured-iced-coffee {
    width: 200px;
    height: 250px;
    object-fit: contain;
    position: relative;
    top: auto;
    left: auto;
    transform: translateY(100%);
  }

  /* Animate all slides on desktop with staggered delays */
  .scroll-reveal.is-visible .featured-coffee-slide:nth-child(1) .featured-iced-coffee {
    animation: slideFromBottom 1s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 0s;
  }

  .scroll-reveal.is-visible .featured-coffee-slide:nth-child(2) .featured-iced-coffee {
    animation: slideFromBottom 1s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 0.2s;
  }

  .scroll-reveal.is-visible .featured-coffee-slide:nth-child(3) .featured-iced-coffee {
    animation: slideFromBottom 1s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 0.4s;
  }

  .scroll-reveal.is-visible .featured-coffee-slide:nth-child(4) .featured-iced-coffee {
    animation: slideFromBottom 1s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 0.6s;
  }

  /* Desktop animation - slide from bottom */
  @keyframes slideFromBottom {
    0% {
      opacity: 0;
      transform: translateY(100%);
    }

    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
}

/* Coffee Carousel - Mobile Only */
.featured-coffee-carousel {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.featured-coffee-track {
  display: flex;
  width: 100%;
  height: 100%;
  overflow-x: auto;
  scroll-snap-type: x mandatory;
  scroll-behavior: smooth;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: none;
  /* Firefox */
}

.featured-coffee-track::-webkit-scrollbar {
  display: none;
  /* Chrome, Safari, Edge */
}

.featured-coffee-slide {
  flex: 0 0 100%;
  width: 100%;
  height: 100%;
  scroll-snap-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

/* Carousel dots/indicators */
.featured-carousel-dots {
  position: absolute;
  bottom: 16px;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 8px;
  z-index: 10;
  pointer-events: none;
}

.carousel-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: rgba(164, 141, 120, 0.4);
  transition: all 0.3s ease;
}

.carousel-dot.active {
  background: rgba(164, 141, 120, 0.9);
  width: 24px;
  border-radius: 4px;
}

/* Hide dots on desktop */
@media (min-width: 640px) {
  .featured-carousel-dots {
    display: none;
  }
}

/* Featured Menu Button - Frosted Glass */
.featured-menu-button {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 14px 32px;
  background: rgba(164, 141, 120, 0.25);
  color: #6b5a48;
  font-family: var(--font-sans);
  font-size: 13px;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.12em;
  text-decoration: none;
  border-radius: 50px;
  border: 1.5px solid rgba(164, 141, 120, 0.35);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  transition:
    transform 0.3s cubic-bezier(0.4, 0, 0.2, 1),
    background 0.3s cubic-bezier(0.4, 0, 0.2, 1),
    border-color 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 2px 8px rgba(164, 141, 120, 0.08);
  position: relative;
  overflow: hidden;
}

.featured-menu-button::before {
  content: '';
  position: absolute;
  inset: 0;
  border-radius: 50px;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.4) 0%, transparent 50%);
  pointer-events: none;
  opacity: 0.5;
}

.featured-menu-button:hover {
  transform: translateY(-2px);
  background: rgba(164, 141, 120, 0.35);
  border-color: rgba(164, 141, 120, 0.5);
  box-shadow: 0 4px 12px rgba(164, 141, 120, 0.15);
}

.featured-menu-button:active {
  transform: translateY(0);
}

.featured-menu-arrow {
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.featured-menu-button:hover .featured-menu-arrow {
  transform: translateX(3px);
}

/* Newsletter Section - Redesigned */
.newsletter-section {
  background-color: var(--cream);
  padding: 60px 20px;
}

@media (min-width: 640px) {
  .newsletter-section {
    padding: 80px 24px;
  }
}

.newsletter-box {
  max-width: 600px;
  margin: 0 auto;
  background: rgba(230, 218, 200, 0.5);
  padding: 40px 28px;
  border-radius: 20px;
  box-shadow: 0 4px 20px rgba(164, 141, 120, 0.12), 0 1px 4px rgba(164, 141, 120, 0.08);
  text-align: center;
}

@media (min-width: 640px) {
  .newsletter-box {
    padding: 48px 40px;
  }
}

.newsletter-heading {
  font-family: var(--font-display);
  font-size: 22px;
  font-weight: 600;
  color: var(--desert-rock);
  margin-bottom: 12px;
  letter-spacing: -0.01em;
}

@media (min-width: 640px) {
  .newsletter-heading {
    font-size: 26px;
  }
}

.newsletter-subtext {
  font-size: 14px;
  color: rgba(107, 90, 72, 0.85);
  margin-bottom: 28px;
  line-height: 1.6;
}

@media (min-width: 640px) {
  .newsletter-subtext {
    font-size: 15px;
  }
}

.newsletter-form-wrapper {
  display: flex;
  flex-direction: column;
  gap: 12px;
  margin-bottom: 12px;
}

@media (min-width: 640px) {
  .newsletter-form-wrapper {
    flex-direction: row;
    gap: 8px;
  }
}

.newsletter-input {
  flex: 1;
  padding: 14px 20px;
  border-radius: 50px;
  border: 1.5px solid rgba(164, 141, 120, 0.25);
  background: rgba(255, 255, 255, 0.6);
  font-family: var(--font-sans);
  font-size: 14px;
  color: var(--desert-rock);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.newsletter-input::placeholder {
  color: rgba(164, 141, 120, 0.5);
}

.newsletter-input:focus {
  outline: none;
  border-color: rgba(164, 141, 120, 0.5);
  background: rgba(255, 255, 255, 0.8);
}

.newsletter-submit-btn {
  padding: 14px 32px;
  border-radius: 50px;
  border: 1.5px solid rgba(164, 141, 120, 0.35);
  background: rgba(164, 141, 120, 0.25);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  color: #6b5a48;
  font-family: var(--font-sans);
  font-size: 14px;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.08em;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  white-space: nowrap;
}

.newsletter-submit-btn:hover {
  background: rgba(164, 141, 120, 0.35);
  border-color: rgba(164, 141, 120, 0.5);
  transform: translateY(-1px);
}

.newsletter-submit-btn:active {
  transform: translateY(0);
}

.newsletter-privacy {
  font-size: 11px;
  color: rgba(164, 141, 120, 0.7);
  line-height: 1.4;
}

@media (min-width: 640px) {
  .newsletter-privacy {
    font-size: 12px;
  }
}
