/* ============================================================
   BASE IMAGE CARD - Styling only, no transform
============================================================ */
.image-card {
  width: 280px;
  min-width: 240px;
  aspect-ratio: 4 / 5;
  border-radius: 24px;
  overflow: hidden;
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.35);
  border: 1px solid rgba(255, 255, 255, 0.32);
  background: rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(10px);
  box-sizing: border-box;
  --tilt: 0deg;
  transform-origin: center center;
  will-change: transform, box-shadow;
  flex-shrink: 0;
  position: relative;
}

.image-card img {
  display: block;
  width: 100%;
  height: 100%;
  object-fit: cover;
  border: 0;
  box-sizing: border-box;
}

/* No hover on base - handled by specific gallery styles */

/* Responsive sizing for image-card */
@media (min-width: 768px) {
  .image-card {
    width: 320px;
    min-width: 320px;
    aspect-ratio: 4 / 5;
  }
}

/* ============================================================
   LOW LIGHTS / READ OUR STORY BLOBS
============================================================ */
.story-blob-wrapper {
  position: absolute;
  inset: 0;
  pointer-events: none;
  overflow: hidden;
}

.story-blob {
  position: absolute;
  border-radius: 48% 52% 46% 54%;
  filter: blur(0px);
  mix-blend-mode: multiply;
  pointer-events: none;
  opacity: 0;
  --blob-transform: rotate(0deg);
  --story-blob-opacity: 0.75;
  transform: scale(0.9) var(--blob-transform);
  transition: opacity 900ms ease, transform 1000ms ease;
  animation-fill-mode: both;
  animation-iteration-count: infinite;
  animation-timing-function: ease-in-out;
  animation-play-state: paused;
  will-change: transform, opacity;
}

.story-blob-left {
  width: 572px;
  height: 572px;
  top: -6%;
  left: 40px;
  --blob-transform: rotate(-10deg);
  --story-blob-opacity: 0.62;
  background: url("/low-lights-blob.svg");
  background-repeat: no-repeat;
  background-size: contain;
  background-position: center;
  animation: none !important;
}

.story-blob-visible {
  opacity: var(--story-blob-opacity);
  transform: scale(1) var(--blob-transform);
  animation-play-state: running;
}

.blob-marker {
  position: absolute;
  inset: 0;
  pointer-events: none;
}

