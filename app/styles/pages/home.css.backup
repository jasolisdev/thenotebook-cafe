/* ============================================================
   SPREAD ANIMATION - Reusable gallery spread effect
============================================================ */
/* Initial stacked state - cards start low and spread out */
.gallery-spread-initial.transform-01:not(.gallery-spread-animate) {
  opacity: 1;
  transform: translateY(60px) translateX(-40px) rotate(var(--tilt));
}

.gallery-spread-initial.transform-02:not(.gallery-spread-animate) {
  opacity: 1;
  transform: translateY(60px) translateX(0) rotate(var(--tilt));
}

.gallery-spread-initial.transform-03:not(.gallery-spread-animate) {
  opacity: 1;
  transform: translateY(60px) translateX(40px) rotate(var(--tilt));
}

/* Desktop - wider spread */
@media (min-width: 768px) {
  .gallery-spread-initial.transform-01:not(.gallery-spread-animate) {
    transform: translateY(60px) translateX(-80px) rotate(var(--tilt));
  }

  .gallery-spread-initial.transform-03:not(.gallery-spread-animate) {
    transform: translateY(60px) translateX(80px) rotate(var(--tilt));
  }
}

/* Animated state - spread out to final position */
.gallery-spread-initial.gallery-spread-animate.transform-01,
.gallery-spread-initial.gallery-spread-animate.transform-02,
.gallery-spread-initial.gallery-spread-animate.transform-03 {
  opacity: 1;
  transform: translateY(0) translateX(0) rotate(var(--tilt));
}

/* Home top gallery animations */
.gallery-animated-0 {
  animation: gallerySlideUp 0.8s ease-out forwards;
}

.gallery-animated-1 {
  animation: gallerySlideUp 0.9s ease-out forwards;
}

.gallery-animated-2 {
  animation: gallerySlideUp 1s ease-out forwards;
}

@keyframes gallerySlideUp {
  0% {
    opacity: 0;
    transform: translateY(40px) rotate(var(--tilt));
  }

  100% {
    opacity: 1;
    transform: translateY(0) rotate(var(--tilt));
  }
}

@media (max-width: 767px) {
  .gallery-animated-0 {
    animation: gallerySlideRight 0.8s ease-out forwards;
  }

  .gallery-animated-1 {
    animation: gallerySlideLeft 0.9s ease-out forwards;
  }

  .gallery-animated-2 {
    animation: gallerySlideRight 1s ease-out forwards;
  }

  @keyframes gallerySlideRight {
    0% {
      opacity: 0;
      transform: translateX(80px) rotate(var(--tilt));
    }

    100% {
      opacity: 1;
      transform: translateX(0) rotate(var(--tilt));
    }
  }

  @keyframes gallerySlideLeft {
    0% {
      opacity: 0;
      transform: translateX(-80px) rotate(var(--tilt));
    }

    100% {
      opacity: 1;
      transform: translateX(0) rotate(var(--tilt));
    }
  }
}

/* Smooth transition for spread animation */
.gallery-spread-initial {
  transition: transform 1.2s cubic-bezier(0.22, 0.61, 0.36, 1),
    box-shadow 0.7s cubic-bezier(0.34, 1.56, 0.64, 1),
    opacity 0.6s ease;
}

/* No delays needed - each card triggers individually on scroll */

/* Hover effect - lift and zoom */
@media (hover: hover) {
  .gallery-spread-animate:hover {
    transform: translateY(-8px) translateX(0) rotate(var(--tilt)) scale(1.08) !important;
    box-shadow: 0 22px 52px rgba(0, 0, 0, 0.22);
  }
}

/* ============================================================
   MOBILE SLIDE-IN ANIMATIONS - Cards slide in from sides
============================================================ */
/* Mobile only - slide in from alternating sides */
@media (max-width: 767px) {

  /* Card 1 - slide from right */
  .gallery-spread-initial.transform-01:not(.gallery-spread-animate) {
    opacity: 0;
    transform: translateX(80px) rotate(var(--tilt));
  }

  /* Card 2 - slide from left */
  .gallery-spread-initial.transform-02:not(.gallery-spread-animate) {
    opacity: 0;
    transform: translateX(-80px) rotate(var(--tilt));
  }

  /* Card 3 - slide from right */
  .gallery-spread-initial.transform-03:not(.gallery-spread-animate) {
    opacity: 0;
    transform: translateX(80px) rotate(var(--tilt));
  }

  /* Animated state - slide to center */
  .gallery-spread-initial.gallery-spread-animate.transform-01,
  .gallery-spread-initial.gallery-spread-animate.transform-02,
  .gallery-spread-initial.gallery-spread-animate.transform-03 {
    opacity: 1;
    transform: translateX(0) rotate(var(--tilt));
  }
}

@keyframes slideFromRight {
  0% {
    opacity: 0;
    transform: translateX(80px) rotate(0deg) scale(0.9);
  }

  100% {
    opacity: 1;
    transform: translateX(0) rotate(var(--tilt)) scale(1);
  }
}

@keyframes slideFromLeft {
  0% {
    opacity: 0;
    transform: translateX(-80px) rotate(0deg) scale(0.9);
  }

  100% {
    opacity: 1;
    transform: translateX(0) rotate(var(--tilt)) scale(1);
  }
}

@keyframes stackSpreadLeft {
  0% {
    transform: translate(-20px, 40px) rotate(0deg) scale(0.9);
    opacity: 0;
  }

  100% {
    transform: translate(0, 0) rotate(var(--tilt)) scale(1);
    opacity: 1;
  }
}

@keyframes stackSpreadRight {
  0% {
    transform: translate(20px, 40px) rotate(0deg) scale(0.9);
    opacity: 0;
  }

  100% {
    transform: translate(0, 0) rotate(var(--tilt)) scale(1);
  }
}

